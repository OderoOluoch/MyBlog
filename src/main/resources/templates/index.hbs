{{#partial "content"}}
    <div class="card">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>WELCOME TO MY BLOGS PAGE</p>
                <footer class="blockquote-footer">Odero Oluoch<cite title="Source Title">Simple blog</cite></footer>
            </blockquote>
        </div>
    </div>

    <div class="card-body">
        <h5 class="card-title">Post List</h5>
    </div>


    {{#if posts}}
        <p>Current post:</p>
        {{#each posts }}
            <div class="card">
                <div class="card-header">
                    Featured
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ content }}</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        {{/each}}
    {{else}}
    <p>No posts!</p>
    {{/if}}

    <p>Add a new Post:</p>

    <div>
        <form class="form-inline" action="/posts/new" method="POST">
            <div class="form-group mb-2">
                <label for="staticEmail2" class="sr-only">Post Content</label>
                <input type="text" readonly class="form-control-plaintext"  value="Post Content">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="content" class="sr-only">Post Content</label>
                <input id="content" class="form-control" name="content" type="text">
            </div>
            <button type="submit" class="btn btn-warning">Add new blog post</button>
        </form>
    </div>
{{/partial}}

{{> layout.hbs}}